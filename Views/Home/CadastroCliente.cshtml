    </head>
    <body class="bg">
        <!-- ========================= SESSÃO HEADER ========================= -->
        <hr class="divider">

        <div class="container border">

            @if (TempData["MSG_S"] != null)
            {
                <p class="alert alert-success" style="margin-top:10px">@TempData["MSG_S"]</p>
            }

            <div class="container">
                <form method="post" asp-action="CadastroCliente" asp-controller="Home">
                    <hr class="divider">
                    <h5>DADOS DO USUÁRIO</h5>
                    <div class="row justify-content-end">
                        <div class="col-md-2 sm-4">
                            <p class="help-block" style="color:red;"><h11>*</h11>Campo Obrigatório</p>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-12">
                            <label asp-for="Nome">Nome:<h11 style="color:red;">*</h11></label>
                            <input asp-for="Nome" name="nome" class="form-control" type="text" id="nome" size="25" maxlength="200" placeholder="Seu Nome Completo Aqui" autofocus>
                            <span asp-validation-for="Nome" class="validation-error"></span><br />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-4">
                            <label asp-for="Cpf">CPF: <h11 style="color:red;">*</h11></label>
                            <input asp-for="Cpf" name="cpf" class="form-control" type="text" id="cpf" size="14" maxlength="14" placeholder="000.000.000-00" OnKeyPress="formatar('###.###.###-##', this)">
                            <span asp-validation-for="Cpf" class="validation-error"></span><br />
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Nascimento">Nascimento: <h11 style="color:red;">*</h11></label>
                            <input asp-for="Nascimento" name="nascimento" class="form-control" type="date" id="nascimento" placeholder="dd/mm/aaaa">
                            <span asp-validation-for="Nascimento" class="validation-error"></span><br />
                        </div>
                        <div class="col-md-4">
                            <label>Sexo: <h11 style="color:red;">*</h11></label>
                            <div class="form-check">
                                <input asp-for="Sexo" class="form-check-input" type="radio" id="sexoM" value="M">
                                <label class="form-check-label" for="exampleRadios1">Masculino</label>
                            </div>
                            <div class="form-check">
                                <input asp-for="Sexo" class="form-check-input" type="radio" id="sexoF" value="F">
                                <label class="form-check-label" for="exampleRadios2">Feminino</label>
                                <br /><span asp-validation-for="Sexo" class="validation-error"></span><br />
                            </div>
                        </div>
                    </div>
                    <hr class="divider">
                    <h5>DADOS DE CONTATO</h5>
                    <div class="form-row">
                        <div class="col-md-6">
                            <label>Celular: <h11 style="color:red;">*</h11></label>
                            <input class="form-control" type="tel" id="telefone" size="13" maxlength="13" placeholder="(00) 00000-0000 "
                                   OnKeyPress="formatar('## #####-####', this)">
                        </div>
                        <div class="col-md-6">
                            <label>Telefone: </label>
                            <input name="telefone" class="form-control" type="tel" id="telefone" size="12" maxlength="12" placeholder="(00) 00000-0000"
                                   OnKeyPress="formatar('## ####-####', this)">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-12">
                            <label asp-for="Email">E-mail: <h11 style="color:red;">*</h11></label>
                            <input asp-for="Email" name="email" class="form-control" type="email" id="email" size="50" maxlength="200" placeholder="email@exemplo.com">
                            <span asp-validation-for="Email" class="validation-error"></span><br />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-6">
                            <label asp-for="Senha">Digite uma senha: <h11 style="color:red;">*</h11></label>
                            <input asp-for="Senha" class="form-control" type="password" id="senha1" maxlength="50" placeholder="********">
                            <span asp-validation-for="Senha" class="validation-error"></span><br />
                        </div>
                        <div class="col-md-6">
                            <label>Confirme a senha: <h11 style="color:red;">*</h11></label>
                            <input class="form-control" type="password" id="senha2" maxlength="50" placeholder="********">
                        </div>
                    </div>
                    <hr class="divider">
                    <h5>DADOS DE LOCALIZAÇÃO</h5>
                    <div class="form-row">
                        <div class="col-md-4">
                            <label>Cep: <h11 style="color:red;">*</h11></label>
                            <input name="cep" class="form-control" type="text" id="cep" value="" size="10" maxlength="9" onblur="pesquisacep(this.value);" placeholder="00000-000" OnKeyPress="formatar('#####-###', this)" />
                        </div>
                        <div class="col-md-8">
                            <label>Rua: </label>
                            <input name="rua" class="form-control" type="text" id="rua" size="60" readonly />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-6">
                            <label>Bairro: </label>
                            <input name="bairro" class="form-control" type="text" id="bairro" size="40" readonly />
                        </div>
                        <div class="col-md-4">
                            <label>Cidade: </label>
                            <input name="cidade" class="form-control" type="text" id="cidade" size="40" readonly />
                        </div>
                        <div class="col-md-2">
                            <label>Estado: </label><br />
                            <input name="uf" class="form-control" type="text" id="uf" size="2" readonly />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-4">
                            <label>N°: </label>
                            <input name="numero" class="form-control" type="text" id="numero" size="5" maxlength="5" placeholder="0">
                        </div>
                        <div class="col-md-8">
                            <label>Complemento: </label>
                            <input name="complemento" class="form-control" type="text" id="complemento" size="35" maxlength="35" placeholder="Quadra 0 Lote 0">
                        </div>
                    </div>

                    <hr class="divider">
                    <div class="form-group">
                        <label class="col-md-2 control-label" for="Cadastrar"></label>
                        <div>
                            <button id="Cadastrar" name="Cadastrar" class="btn btn-success" type="submit">Cadastrar</button>
                            <button id="Cancelar" name="Cancelar" class="btn btn-danger" type="reset">Cancelar</button>
                        </div>
                    </div>
                </form>
            </div>
            </div>
    </body>