                    </ul>
                    <ul class="nav">
                        <li class="nav-item">
                            <a class="nav-link" href="#"> <i class="fa fa-phone"></i> Ligue para nós (62) 4002-8922 </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </section>
        <section class="header-main border-bottom" style="background-color: #0f1536">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-3 col-sm-4 col-12">
                        <a href="/" class="brand-wrap">
                            <img class="logo" src=@Url.Content("~/images/logobranca.png")>
                        </a>
                    </div>
                    <div class="col-lg-4 col-xl-5 col-sm-8 col-12">
                        <form class="search" method="get">
                            <div class="input-group w-100">
                                <input type="text" class="form-control" style="width:55%;" type="search" name="pesquisa" value="@pesquisa" placeholder="O que você está procurando?">
                                <div class="input-group-append">
                                    <button class="btn btn-dark" type="submit">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col-lg-5 col-xl-4 col-sm-12">
                        <div class="widgets-wrap float-md-right">
                            <a asp-controller="CarrinhoCompra" asp-action="Index" class="widget-header mr-2">
                                <div class="icon">
                                    <i class="icon-sm rounded-circle border fa fa-shopping-cart"></i>
                                </div>
                            </a>

                            @if (_loginCliente.GetCliente() != null)
                            {
                                <div class="widget-header dropdown">
                                    <a href="#" data-toggle="dropdown" data-offset="20,10">
                                        <div class="icontext">
                                            <div class="icon">
                                                <i class="icon-sm rounded-circle border fa fa-user"></i>
                                            </div>
                                            <div class="text">
                                                <small class="text-muted">Olá, @_loginCliente.GetCliente().Nome</small>
                                                <div>Minha conta <i class="fa fa-caret-down"></i></div>
                                            </div>
                                        </div>
                                    </a>

                                    <div class="dropdown-menu dropdown-menu-right">
                                        <a class="dropdown-item" asp-action="Index" asp-controller="Pedido" asp-area="Cliente">Meus Pedidos</a>
                                        <a class="dropdown-item" asp-action="Sair" asp-controller="Home" asp-area="Cliente">Sair</a>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="widget-header dropdown">
                                    <a href="#" data-toggle="dropdown" data-offset="20,10">
                                        <div class="icontext">
                                            <div class="icon">
                                                <i class="icon-sm rounded-circle border fa fa-user"></i>
                                            </div>
                                            <div class="text">
                                                <small class="text-muted">Cadastrar | Logar</small>
                                                <div>Minha conta <i class="fa fa-caret-down"></i></div>
                                            </div>
                                        </div>
                                    </a>

                                    <div class="dropdown-menu dropdown-menu-right">

                                        @{ /* LOGIN DO CLIENTE */ }
                                        <form class="px-4 py-3" method="post" asp-action="Login" asp-controller="Home" asp-area="Cliente">

                                            <div class="form-group">
                                                <label>E-mail</label>
                                                <input name="Email" type="email" class="form-control" placeholder="email@exemplo.com">
                                            </div>
                                            <div class="form-group">
                                                <label>Senha</label>
                                                <input name="Senha" type="password" class="form-control" placeholder="Senha">
                                            </div>
                                            <button type="submit" class="btn btn-primary">Entrar</button>
                                        </form>
                                        <hr class="dropdown-divider">
                                        <a class="dropdown-item" asp-action="CadastroCliente" asp-controller="Home" asp-area="Cliente">Não possui conta? Cadastre-se aqui</a>
                                        <a class="dropdown-item" href="#">Esqueceu a senha?</a>
                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </section>

        <nav class="navbar navbar-main navbar-expand-lg border-bottom">
            <div class="container">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#main_nav5" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="main_nav5">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link pl-0" href="#"> <strong>Todas as categorias</strong></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Produto" value="4" asp-action="ListagemCategoria">Papelaria</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="ListagemCategoria">Escritório</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="ListagemCategoria">Doméstico</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Outros</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-controller="Home" asp-action="ListagemCategoria">Artigos para piscina</a>
                                <a class="dropdown-item" asp-controller="Home" asp-action="ListagemCategoria">Brinquedos</a>
                                <a class="dropdown-item" asp-controller="Home" asp-action="ListagemCategoria">Armarinhos</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    @RenderBody()


