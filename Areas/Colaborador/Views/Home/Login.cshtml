@model BazarPapelaria10.Models.Colaborador
@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <title>Nota 10 - Login Colaborador</title>
</head>
<body>
    <main role="main">
        <br />
        <br />
        <section class="container">
            <aside class="col-md-6">
                <div id="code_login_1">
                    <div class="card border">
                        <article class="card-body">
                            <h4 class="card-title mb-4 mt-1">Login Colaborador</h4>
                            <form asp-action="Login" asp-controller="Home">
                                @if (TempData["MSG_E"] != null)
                                {
                                    <!-- Error Alert -->
                                    <div class="alert alert-danger alert-dismissible fade show">
                                        <strong>Oops!</strong> @TempData["MSG_E"]
                                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                                    </div>
                                }
                                <div class="form-group">
                                    <label>E-mail:</label>
                                    <input asp-for="Email" class="form-control" placeholder="email@exemplo.com" type="email">
                                </div> <!-- form-group// -->
                                <div class="form-group">
                                    <label>Senha:</label>
                                    <input asp-for="Senha" class="form-control" placeholder="******" type="password">
                                </div> <!-- form-group// -->
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-block"> Login </button>
                                </div> <!-- form-group// -->
                            </form>
                        </article>
                    </div> <!-- card.// -->
                </div> <!-- code-wrap.// -->
            </aside>
        </section>
    </main>
</body>