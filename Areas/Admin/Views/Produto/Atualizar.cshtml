@model BazarPapelaria10.Models.ProdutoAgregador.Produto
@{
    ViewData["Title"] = "Atualizar";
}

<h2 style="margin-top:20px;margin-bottom:20px;"><i class="fas fa-pen-square"></i> Atualizar</h2>

<form method="post">

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Dtalteracao" />
    <input type="hidden" asp-for="Dtcriacao" />
    <input type="hidden" asp-for="Ativo" />

    <div class="form-group">
        <label asp-for="CategoriaId">Categoria:<h11 style="color:red;">*</h11></label>
        <select asp-for="CategoriaId" class="form-control" asp-items="@ViewBag.Categorias">
            <option value=""></option>
        </select>
        <span asp-validation-for="CategoriaId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Nomeprod">Nome:<h11 style="color:red;">*</h11></label>
        <input asp-for="Nomeprod" class="form-control" placeholder="Nome do produto.">
        <span asp-validation-for="Nomeprod" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Descprod">Descrição:</label>
        <textarea asp-for="Descprod" class="form-control"></textarea>
        <span asp-validation-for="Descprod" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col">
            <label asp-for="Valorprod">Valor:<h11 style="color:red;">*</h11></label>
            <div class="input-group" mb-2>
                <div class="input-group-prepend">
                    <div class="input-group-text">R$</div>
                </div>
                <input asp-for="Valorprod" class="form-control dinheiro" placeholder="Valor do produto.">
            </div>
            <span asp-validation-for="Valorprod" class="text-danger"></span>
        </div>

        <div class="col" style="margin-bottom:15px;">
            <label asp-for="Quantidade">Quantidade:<h11 style="color:red;">*</h11></label>
            <div class="input-group" mb-2>
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-sort-amount-up-alt"></i></div>
                </div>
                <input asp-for="Quantidade" class="form-control" placeholder="Quantidade.">
            </div>
        </div>
    </div>

    <div class="row" style="margin-bottom:15px;">
        <div class="col">
            <label asp-for="Cor">Cor:</label>
            <div class="input-group" mb-2>
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-palette"></i></div>
                </div>
                <input asp-for="Cor" class="form-control" placeholder="Cor do produto.">
            </div>
        </div>

        <div class="col">
            <label asp-for="Marca">Marca:</label>
            <div class="input-group" mb-2>
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-handshake"></i></div>
                </div>
                <input asp-for="Marca" class="form-control" placeholder="Marca do produto.">
            </div>
        </div>
    </div>

    <div class="row" style="margin-bottom:15px;">
        <div class="col">
            <label asp-for="Modelo">Modelo:</label>
            <div class="input-group" mb-2>
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-receipt"></i></div>
                </div>
                <input asp-for="Modelo" class="form-control" placeholder="Modelo do produto.">
            </div>
        </div>

        <div class="col">
            <label asp-for="Material">Material:</label>
            <div class="input-group" mb-2>
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fab fa-creative-commons-remix"></i></div>
                </div>
                <input asp-for="Material" class="form-control" placeholder="Material do produto.">
            </div>
        </div>
    </div>

    <div class="form-group" style="margin-bottom:15px;">
        <label asp-for="Obsprod">Observação:</label>
        <textarea asp-for="Obsprod" class="form-control"></textarea>
        <span asp-validation-for="Obsprod" class="text-danger"></span>
    </div>

    @{
        List<Imagem> imagens = new List<Imagem>();

        if (Model != null)
        {
            imagens = Model.Imagens.ToList();
        }
    }

    <div class="row imagens" style="margin-bottom:15px; margin-left: auto; margin-right: auto;">
        @for (int i = 0; i < 4; i++)
        {

            @if (imagens.ElementAtOrDefault(i) != null)
            {
                <div class="col-md-3">
                    <input type="file" class="input-file">
                    <div class="container-img-thumbnail">
                        <img src="@imagens.ElementAtOrDefault(i).Caminho" class="img-thumbnail img-upload" style="width:200px;height:200px;" />
                    </div>
                    <div class="btn btn-outline-danger btn-imagem-excluir">
                        <i class="fas fa-trash"></i>
                    </div>
                    <input type="hidden" name="imagem" value="@imagens.ElementAtOrDefault(i).Caminho">
                </div>
            }
            else
            {
                <div class="col-md-3">
                    <input type="file" class="input-file">
                    <div class="container-img-thumbnail">
                        <img src="~/images/noimage.png" class="img-thumbnail img-upload" style="width:200px;height:200px;" />
                    </div>
                    <div class="btn btn-outline-danger btn-imagem-excluir btn-ocultar">
                        <i class="fas fa-trash"></i>
                    </div>
                    <input type="hidden" name="imagem">
                </div>
            }
        }
    </div>

    <div class="col-lg-12" style="text-align: right; margin-bottom: 10px;">
        <a asp-action="Index" class="btn btn-outline-info"><i class="fas fa-sign-out-alt"></i> Voltar</a>
        <button type="submit" class="btn btn-outline-primary btn-cdt-att"><i class="fas fa-pen-square"></i> Atualizar</button>
    </div>
</form>