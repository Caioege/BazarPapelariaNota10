@model BazarPapelaria10.Models.Colaborador

@{
    ViewData["Title"] = "Atualizar";
}

<h2 style="margin-top:20px;"><i class="fas fa-pen-square"></i> Atualizar</h2>

<form method="post">

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="DtCriacao" />
    <input type="hidden" asp-for="DtAlteracao" />
    <input type="hidden" asp-for="Tipo" />

    <div class="form-group">
        <label asp-for="Nome">Nome:<h11 style="color:red;">*</h11></label>
        <input asp-for="Nome" class="form-control" placeholder="Nome da categoria.">
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email">Email:<h11 style="color:red;">*</h11></label>
        <input asp-for="Email" class="form-control" placeholder="Descrição da categoria.">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Senha">Senha:<h11 style="color:red;">*</h11></label>
        <input asp-for="Senha" class="form-control" placeholder="*****" type="password">
        <span asp-validation-for="Senha" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ConfirmacaoSenha">Confirme a senha:<h11 style="color:red;">*</h11></label>
        <input asp-for="ConfirmacaoSenha" class="form-control" placeholder="Digite novamente a senha." type="password">
        <span asp-validation-for="ConfirmacaoSenha" class="text-danger"></span>
    </div>

    <div class="col-lg-12" style="text-align: right; margin-bottom: 10px;">
        <a asp-action="Index" class="btn btn-outline-info"><i class="fas fa-sign-out-alt"></i> Voltar</a>
        <button type="submit" class="btn btn-outline-primary btn-cdt-att"><i class="fas fa-pen-square"></i> Atualizar</button>
    </div>
</form>