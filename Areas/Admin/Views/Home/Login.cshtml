@model BazarPapelaria10.Models.Colaborador
@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="pt_BR">

<head>
    <title>Nota 10 - Login Colaborador</title>

    <link rel="shortcut icon" type="image/x-icon" href="~/images/icone.ico">

    <!-- Bootstrap core CSS -->
    <link href="~/lib/bootstrap-4.2.1-dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/pagedlist/PagedList.css" rel="stylesheet" />
    <link href="~/lib/fontawesome/all.min.css" rel="stylesheet" />

    <style>
        body {
            background-image: url(/images/wallpaper.jpg);
            background-size: cover;
            background-attachment: fixed;
        }
    </style>

</head>
<body>
    <main role="main">
        <br />
        <br />

            <section class="container">
                <aside class="col-md-6" style="margin-left:auto; margin-right:auto; margin-top:auto; margin-bottom: auto;">
                    <div id="code_login_1">
                        <div class="card border">
                            <article class="card-body">
                                <h4 class="card-title mb-4 mt-1 text-center">Login Colaborador</h4>
                                <form asp-action="Login" asp-controller="Home">
                                    @if (TempData["MSG_E"] != null)
                                    {
                                        <!-- Error Alert -->
                                        <div class="alert alert-danger alert-dismissible fade show text-center">
                                            <strong>Oops!</strong> @TempData["MSG_E"]
                                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                                        </div>
                                    }
                                    <div class="form-group text-center">
                                        <label>E-mail:</label>
                                        <input asp-for="Email" class="form-control text-center" placeholder="email@exemplo.com" type="email">
                                    </div> <!-- form-group// -->
                                    <div class="form-group text-center">
                                        <label>Senha:</label>
                                        <input asp-for="Senha" class="form-control text-center" placeholder="******" type="password">
                                    </div> <!-- form-group// -->
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary btn-block"> Login </button>
                                    </div> <!-- form-group// -->
                                </form>
                            </article>
                        </div> <!-- card.// -->
                    </div> <!-- code-wrap.// -->
                </aside>
            </section>
    </main>

    <script src="~/lib/jquery3.3.1/jquery-3.3.1.min.js"></script>
    <script>window.jQuery || document.write('<script src="~/lib/jquery3.3.1/jquery-3.3.1.min.js')</script>
    <script src="~/lib/bootstrap-4.2.1-dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>