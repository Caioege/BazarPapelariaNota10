            document.getElementById(i).readOnly = true;
        }
        function desabilita(i) {
            document.getElementById(i).disabled = true;
        }
        function habilita(i) {
            document.getElementById(i).disabled = false;
        }
        function showhide() {

            var div = document.getElementById("newpost");

            if (idade() >= 18) {
