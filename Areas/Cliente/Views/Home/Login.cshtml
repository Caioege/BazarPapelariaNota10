@model  BazarPapelaria10.Models.Pessoa
@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <title>Nota 10 - Login</title>
</head>
<body>
    <main role="main">
        <br />
        <br />
        <section class="container">
            <aside class="col-md-6" style="margin-left:auto; margin-right:auto;">
                <div id="code_login_1">
                    <div class="card border">
                        <article class="card-body">
                            <h4 class="card-title mb-4 mt-1 text-left">Login</h4>
                            <form method="post">
                                @if (TempData["MSG_E"] != null)
                                {
                                    <!-- Error Alert -->
                                    <div class="alert alert-danger alert-dismissible fade show text-center">
                                        <strong>Oops!</strong> @TempData["MSG_E"]
                                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                                    </div>
                                }
                                <div class="form-group">
                                    <label>E-mail:</label>
                                    <input asp-for="Email" class="form-control text-center" placeholder="email@exemplo.com" type="email">
                                </div> <!-- form-group// -->
                                <div class="form-group">
                                    <label>Senha:</label>
                                    <input asp-for="Senha" class="form-control text-center" placeholder="******" type="password">
                                </div> <!-- form-group// -->
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-block"> Entrar </button>
                                </div> <!-- form-group// -->

                                <div class="form-group">
                                    <a class="btn btn-outline-info btn-block text-center" asp-action="CadastroCliente" asp-controller="Home" asp-route-returnUrl="@Context.Request.Query["returnUrl"]">Não possui uma conta? Cadastre-se aqui.</a>
                                </div>
                            </form>
                        </article>
                    </div> <!-- card.// -->
                </div> <!-- code-wrap.// -->
            </aside>
        </section>
     </main>
</body>